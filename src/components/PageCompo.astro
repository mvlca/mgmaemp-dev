---
import Aside from "./AsideCompo.astro";
import Back from "./BackCompo.astro";
---
<div class="page-outer">
    <div class="page-inner">
        <aside>
            <Aside />
        </aside>
        <div class="page-body">
            <Back />
            <slot />
        </div>
    </div>
</div>
<style>
    .page-outer {
        width: 100%;
        padding: 5rem 0 2rem 0;
    }
    .page-inner {
        width: 900px;
        margin: auto;
        display: flex;
        flex-wrap: wrap;
        justify-content: space-between;
    }
    aside {
        flex: 0 0 20%;
        padding-right: 1rem;
        border-right: 1px solid #ddd;
    }
    .page-body {
        flex: 0 0 75%;
    }
    @media screen and (max-width: 900px) {
        .page-outer {
            padding: 2rem 0;
        }
        .page-inner {
            width: 100%;
            padding: 0 2rem;
        }
        aside, .page-body {
            flex: 0 0 100%;
        }
        aside {
            order: 2;
            border-right: unset;
            margin-top: 2rem;
            border-top: 1px solid lightgray;
            padding: 1rem 0;
        }
    }
</style>