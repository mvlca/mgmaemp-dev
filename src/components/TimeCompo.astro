---
interface Props {
	date: Date;
}

const { date } = Astro.props;
---

<time datetime={date.toISOString()}>
	{
		date.toLocaleDateString('en-us', {
			weekday: 'long',
			month: 'short',
			day: 'numeric',
			year: 'numeric'
		})
	}
</time>

<style>
	time {
		display: block;
		font-size: 1rem;
		color: #999;
		margin-bottom: 1rem;
	}
</style>
